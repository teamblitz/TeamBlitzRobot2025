// This file will set up a Codespace that allows us to develop with WPILib and Java
{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "postCreateCommand": "cd /opt && wget 'https://github.com/wpilibsuite/vscode-wpilib/releases/download/v2025.2.1/vscode-wpilib-2025.2.1.vsix'",
  "features": {
  },
  "customizations": {
    "vscode": {
      "extensions": ["/opt/vscode-wpilib-2025.2.1.vsix", "redhat.java", "vscjava.vscode-java-debug", "vscjava.vscode-java-dependency", "ms-vscode.cpptools"]
    }
  }
}
